<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    >
    <ScrollView
        android:isScrollContainer="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="0"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Proof Photo (Recommended)" />
                <ImageView
                    android:id="@+id/img_proof"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/camera" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location (Required)" />
                <TextView
                    android:id="@+id/txtLocation"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="[Tap to Set]"
                    android:textSize="19sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/online_loading_layout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ProgressBar
                        android:id="@+id/online_loading_progressbar"
                        android:layout_alignParentLeft="true"
                        android:layout_width="16dp"
                        android:layout_height="16dp" />
                    <TextView
                        android:id="@+id/online_loading_textview"
                        android:paddingLeft="16dp"
                        android:text="Finding nearest fire station"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Additional Information" />
                    <TextView
                        android:id="@+id/txtDigits"
                        android:layout_alignParentRight="true"
                        android:text="0/160"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/txtAdditionalInfo"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ-Ã± 1234567890\n"
                    android:hint="(Optional)"
                    android:gravity="left"
                    android:lines="4"
                    android:maxLines="4"
                    android:maxLength="160"
                    android:scrollbars = "vertical"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_alignParentBottom="true"
                    android:text="  Submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/colorPrimary"
                    android:drawableLeft="@drawable/ic_send_white"
                    android:textColor="#ffffff"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:gravity="left|center_vertical"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
