<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rvnmrqz.firetrack.Fragment_PostZoom"
    android:background="#eff0f2"
    >

    <com.example.rvnmrqz.firetrack.TouchImageView
        android:layout_centerInParent="true"
        android:id="@+id/zoom_touchimageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:layout_gravity="top|right"
        android:id="@+id/zoom_txtClose"
        android:text="X"
        android:textColor="#3e3e3f"
        android:shadowColor="#fff"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</FrameLayout>
